<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_job_feedback_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp">

    <RelativeLayout
        android:id="@+id/layout_job_feedback_item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_job_feedback_item"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_launcher"/>

        <View
            android:id="@+id/divider_job_feedback_item"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="#ddd"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv_job_feedback_item"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/divider_job_feedback_item"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="前段开发实习生"
                android:layout_weight="1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_job_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="北京"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_job_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="200元/天"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_job_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-12-21"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="15dp"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_job_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[已查看]"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            android:textSize="14sp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>