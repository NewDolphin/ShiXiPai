<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#fff"
        android:layout_marginLeft="0.3dp"
        android:layout_marginRight="0.3dp"
        android:layout_marginTop="0.3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic_job_classify"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_job_kind1"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/title_job_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位名称"
            android:layout_below="@+id/pic_job_classify"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</FrameLayout>
